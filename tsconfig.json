{
	"compilerOptions": {
		"target": "esnext",
		"module": "esnext",
		"moduleResolution": "node",
		"strict": true,
		"sourceMap": true,
		"lib": ["esnext", "dom", "dom.iterable", "scripthost"],
		"types": ["vite/client"],
		"importHelpers": true,
		"esModuleInterop": true,
		"declaration": true,
		"baseUrl": ".",
		"paths": {
			"@/*": ["src/*"]
		},
		"noUnusedLocals": true,
		"noUnusedParameters": true
	},
	"include": ["lib/*.ts", "src/**/*.ts", "src/**/*.vue"],
	"exclude": ["node_modules", "dist"]
}
